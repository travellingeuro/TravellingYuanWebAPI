@*header*@
<header class="masthead text-black-50 text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                @*Spinner*@
                <div class="d-flex justify-content-center">
                    <div id='loader' class="spinner-border text-primary" style="width: 10rem; height: 10rem; display:none" role="status">

                    </div>
                </div>
                <h1 class="mb-5">Try inserting the serial number of a Yuan bill</h1>
            </div>

            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form>
                    <div class="form-row">
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input id="serialinput" class="form-control form-control-lg" placeholder="the long number in the front...">
                        </div>
                        <div class="col-12 col-md-3">
                            <button id="trybutton" onclick="initMap()" type="button" class="btn btn-block btn-lg btn-primary">Try!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>

<section class="mb-4">
    <div class="col-md-12 mb-4">
        <!--Card-->
        <div class="card">
            <!--Card content-->
            <div class="card-body text-center">
                <!--Google map-->
                <div id="mapa" class="z-depth-1" style="height: 400px"></div>
            </div>
        </div>
    </div>
</section>

@*badges *@
